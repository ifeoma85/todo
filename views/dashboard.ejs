  <h3>
    <b>Note:</b>Indicate completed, deleted and pending tasks.
  </h3>
<div id="tasktable">
  <table>
    <tr>
      <th>LIST OF TASKS</th>
      <th>STATE</th>
      <th>TICK</th>
    </tr>
    <%taskInfo.forEach(taskInfo=>{%> <%if(taskInfo.state=="pending" ){%>
        <tr>
          <td>
            <%=taskInfos.task_name%>
          </td>

          <td>
            <form action="/tasks/update/<%=taskInfo_id%>" method="PUT">
              <input id="stateInput" type="text" name="state" value="completed" />
              <button id="state" type="submit" formmethod="post" title="click if task is completed">
              <%=taskInfo.state%>
                </button>
            </form>
          </td>

          <td>
            <form action="/tasks/<%=taskInfo._id%>" method="DELETE">
              <button id="deleteButton" type="submit" formmethod="post" title="delete task">

                <img src="../public/deleteimage.pending" alt="delete" id="delIcon" />
                <figcaption>delete</figcaption>
              </button>
            </form>
          </td>
        </tr>
        <%}else{%>
          <tr>
            <td>
              <form action="/task/update/<%=taskInfo_id%>" method="PUT">
                <input id="stateInput" type="text" formmethod="state" title="pending">
                />
                <button id="state" type="submit" formmethod="post" title="click if you task is pending">

                  <%=taskInfo.state%>
                </button>
              </form>
            </td>
          </tr>
  </table>
  </div>
  </main>
